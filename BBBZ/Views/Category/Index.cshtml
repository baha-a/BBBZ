@model IEnumerable<BBBZ.Models.Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-sm" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedByUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Access)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
             @Extenisons.Dashis(Extenisons.ParentsLength(item)) 
            <a href="@Url.Action("Details", new { id = item.ID })"> @Html.DisplayFor(modelItem => item.Title) </a>
        </td>
        <td>
            @if(item.Parent == null)
            {
                <i> no parent </i>
            }
            else
            { 
                <a href="@Url.Action("Details", new { id = item.Parent.ID })">  @Html.DisplayFor(modelItem => item.Parent.Title) </a>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedByUsername)
        </td>
        <td>
            @if(item.Access != null)
            {
                <a href="@Url.Action("Details", "ViewLevel", new { id= item.Access.ID})">
                    @Html.DisplayFor(modelItem => item.Access.Title)
                 </a>
            }
            else
            {
                <i> none </i>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Published)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
