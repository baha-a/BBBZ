@model BBBZ.Models.Category

@{
    ViewBag.Title = Model.Title;
    ViewBag.MetaKey = Model.MetaKey;
    ViewBag.MetaDesc = Model.MetaDesc;
    ViewBag.Preview = true;
}

<h2>Category Details</h2>

<div>
    @Html.Partial("_ControlButtonPartial")
	<hr />
    
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <div class="form-group">
                <div class="col-md-offset-2">
                    @if (string.IsNullOrEmpty(Model.Image))
                    {
                        <i> no image </i>
                    }
                    else
                    {
                        <img src="@(Model.Image)" alt="@(Model.Description)" class="boxedimage" />
                    }
                </div>
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MetaDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MetaKey)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaKey)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Template)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Template)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedByUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedByUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Published)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Published)
        </dd>


        <dt>
            Parent
        </dt>

        <dd>
            @if(Model.Parent == null)
            {
                <i> no parent </i>
            }
            else
            {
                var v = Model.Parent;
                while (v!=null)
	            {
                    <b> > </b> <a href="@Url.Action("Details", new { id = v.ID })"> @Html.DisplayFor(model => v.Title) </a>
                    v = v.Parent;
	            }
            }
        </dd>

        <dt>
            SubCategories
        </dt>
        <dd>
            @if (Model.SubCategories.Count == 0)
            {
              <i> no subcategories </i>
            }
            
            <ul>
                @foreach (var g in Model.SubCategories)
                {
                    <li> <a href="@Url.Action("Details", new { id = g.ID})"> @Html.DisplayFor(model => g.Title) </a> </li>
                }
            </ul>
        </dd>

        <dt>
            Contents
        </dt>
        <dd>
            @if (Model.Contents.Count == 0)
            {
                <i> no content </i>
            }

            <ul>
                @foreach (var g in Model.Contents)
                {
                    <li> <a href="@Url.Action("Details","Contents", new { id = g.ID})"> @Html.DisplayFor(model => g.Title) </a> </li>
                }
            </ul>
        </dd>


        <dt>
            Access
        </dt>

        <dd>
            @if(Model.Access != null)
            {
                <a href="@Url.Action("Details","ViewLevel", new { id = Model.Access.ID})"> @Html.DisplayFor(model => Model.Access.Title) </a>
            }   
        </dd>

    </dl>
</div>
