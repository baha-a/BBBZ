@model IEnumerable<BBBZ.Models.CustomField>

@{
    ViewBag.Title = "Custom Fields";
}

<div class="container">
    <div class="row">
        <h2>Custrom Fields</h2>
    </div>
    <div class="row">
        @Html.ValidationSummary(false, null, new { @class = "alert alert-danger" })
    </div>

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-sm-1">
                @Html.DisplayFor(model => item.ID)
            </div>
            <div class="col-sm-9">
                @using (Html.BeginForm("Edit", "CustomField", FormMethod.Post))
                {
                    <div class="col-sm-10">
                        <input type="text" required id="Title" placeholder="Title" name="Title" value="@item.Title" class="form-control" />
                    </div>
                    <div class="col-sm-2">
                        <input type="submit" value="Save Change" class="btn btn-info btn-sm" />
                    </div>
                    <input type="hidden" id="id" name="id" value="@item.ID" />
                }
            </div>
            <div class="col-sm-1">
                @using (Html.BeginForm("Delete", "CustomField", FormMethod.Post))
                {
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                    <input type="hidden" id="id" name="id" value="@item.ID" />
                }
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-9">
            @using (Html.BeginForm("Create", "CustomField", FormMethod.Post))
            {
                <div class="col-sm-10">
                    <input type="text" id="Title" placeholder="Title" name="Title" class="form-control" required="required" />
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Create" class="btn btn-success btn-sm" />
                </div>
            }
        </div>
        </div>
 </div>