@model BBBZ.Models.Content

@{
    ViewBag.Title = Model.Title;

    ViewBag.MetaKey = Model.MetaKey;
    ViewBag.MetaDesc = Model.MetaDesc;
    ViewBag.Preview = true;
}

<h2>Content Details</h2>

<div>
    @Html.Partial("_ControlButtonPartial")
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IntroText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IntroText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FullText)
        </dt>

        <dd>
           @Html.Raw( Model.FullText )
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descrption)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descrption)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MetaDesc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaDesc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MetaKey)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MetaKey)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @if (Model.Category == null)
            {
                <i> no category </i>
            }
            else
            { 
                <a href="@Url.Action("Details","Category", new { id = Model.Category.ID})"> @Html.DisplayFor(model => Model.Category.Title) </a>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Access)
        </dt>

        <dd>
            @if(Model.Access != null)
            {
                <a href="@Url.Action("Details","ViewLevel", new { id = Model.Access.ID})"> @Html.DisplayFor(model => Model.Access.Title) </a>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Template)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Template)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedByUsername)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedByUsername)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Published)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Published)
        </dd>

        
        @foreach (var field in Model.CustomFieldValues)
        {
            <dt>
                @Html.DisplayFor(model => field.CustomField.Title)
            </dt>

            <dd>
                @Html.Raw(field.Value)
            </dd>
        }



        <dt>
            Visit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Log.Count) times
            ( <a href="@Url.Action("Visit", "Contents", new { id = Model.ID})"> show all </a> )
        </dd>
    </dl>
</div>
